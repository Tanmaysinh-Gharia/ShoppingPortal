@using ShoppingPortal.Core.Enums
@using ShoppingPortal.Core.Models
@model OrderListViewModel
@{
    ViewData["Title"] = "Manage Orders";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Manage Orders</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderId.ToString().Substring(0, 8)</td>
                    <td>@order.UserId.ToString().Substring(0, 8)</td>
                    <td>@order.CreatedAt.ToString("d")</td>
                    <td>
                        <select class="form-select form-select-sm order-status @(order.Status == OrderStatusEnum.Cancelled ? "btn-danger" : "")"
                                data-order-id="@order.OrderId" @(order.Status == OrderStatusEnum.Cancelled ? "disabled" : "")>
                            @foreach (OrderStatusEnum status in Enum.GetValues(typeof(OrderStatusEnum)))
                            {
                                <option value="@status" selected="@(status == order.Status)">@status</option>
                            }
                        </select>
                    </td>
                    
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary view-order-btn"
                                data-order-id="@order.OrderId">
                            <i class="bi bi-eye"></i> View
                        </button>
                    </td>
                </tr>
                <tr class="order-details-row" id="order-details-@order.OrderId" style="display: none;">
                    <td colspan="6">
                        <div class="order-details-container"></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.PagingInfo.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PagingInfo.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Orders" asp-route-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}
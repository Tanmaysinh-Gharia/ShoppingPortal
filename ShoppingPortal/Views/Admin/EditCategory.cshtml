@using ShoppingPortal.Core.DTOs
@model CategoryDto
@{
    ViewData["Title"] = Model.CategoryId == Guid.Empty ? "Add Category" : "Edit Category";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">@ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <form asp-action="@(Model.CategoryId == Guid.Empty ? "AddCategory" : "EditCategory")" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Categories" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@using ShoppingPortal.Core.DTOs
@model List<CategoryDto>
@{
    ViewData["Title"] = "Manage Categories";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Manage Categories</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="AddCategory" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-plus-circle"></i> Add Category
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>

                    <td class="text-muted mb-2 text-truncate" >@category.Description</td>

                    <td>
                        <a asp-action="EditCategory" asp-route-id="@category.CategoryId" class="btn btn-sm btn-outline-warning me-2">
                            <b> <i class="bi bi-pencil"></i> Edit </b>
                        </a>
                        <button class="btn btn-sm btn-outline-danger delete-category" data-id="@category.CategoryId">
                            <b><i class="bi bi-trash"></i> Delete </b>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>